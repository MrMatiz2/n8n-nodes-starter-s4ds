{
  "method": "GET",
  "endpoint": "/payment",
  "description": "Get payments with optional quantity filter",
  "parameters": [
    {
      "name": "quantity",
      "type": "integer",
      "required": false,
      "description": "Number of payments to retrieve",
      "in": "query"
    },
    {
      "name": "orderNumber",
      "type": "string",
      "required": false,
      "description": "Filter by order number",
      "in": "query"
    },
    {
      "name": "customerDocument",
      "type": "string",
      "required": false,
      "description": "Filter by customer document",
      "in": "query"
    }
  ],
  "requiresAuth": true,
  "response": {
    "type": "object",
    "properties": {
      "data": {
        "type": "array",
        "items": {
          "type": "object"
        }
      }
    }
  }
}