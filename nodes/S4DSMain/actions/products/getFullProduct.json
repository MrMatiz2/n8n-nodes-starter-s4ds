{
  "method": "GET",
  "endpoint": "/product/catalogs/{productCode}",
  "description": "Get full product information by product code",
  "parameters": [
    {
      "name": "productCode",
      "type": "string",
      "required": true,
      "description": "Product code",
      "in": "path"
    },
    {
      "name": "catalogId",
      "type": "integer",
      "required": false,
      "description": "Catalog ID to filter by",
      "in": "query"
    },
    {
      "name": "activeCatalogs",
      "type": "boolean",
      "required": false,
      "description": "Filter by active catalogs only (default: false)",
      "in": "query"
    }
  ],
  "requiresAuth": true,
  "response": {
    "type": "object",
    "properties": {}
  }
}