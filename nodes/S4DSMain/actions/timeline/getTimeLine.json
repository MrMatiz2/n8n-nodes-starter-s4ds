      "description": "Customer document type",
      "in": "query"
    },
    {
      "name": "documentId",
      "type": "string",
      "required": false,
      "description": "Customer document ID",
      "in": "query"
    },
    {
      "name": "operationStartDate",
      "type": "string",
      "required": false,
      "description": "Operation start date",
      "in": "query"
    },
    {
      "name": "operationEndDate",
      "type": "string",
      "required": false,
      "description": "Operation end date",
      "in": "query"
    },
    {
      "name": "commentVisible",
      "type": "boolean",
      "required": false,
