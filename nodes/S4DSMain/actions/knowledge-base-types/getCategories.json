{
  "name": "getCategories",
  "method": "GET",
  "endpoint": "/knowledgeBaseTypes",
  "description": "Get knowledge base categories with optional filters",
  "parameters": [
    {
      "name": "name",
      "type": "string",
      "required": false,
      "description": "Filter by category name",
      "in": "query"
    },
    {
      "name": "description",
      "type": "string",
      "required": false,
      "description": "Filter by description",
      "in": "query"
    },
    {
      "name": "filefather_knowledge_type",
      "type": "string",
      "required": false,
      "description": "Filter by knowledge type",
      "in": "query"
    },
    {
      "name": "roleid",
      "type": "string",
      "required": false,
      "description": "Filter by role ID",
      "in": "query"
    },
    {
      "name": "highlight_category",
      "type": "boolean",
      "required": false,
      "description": "Filter by highlight category",
      "in": "query"
    }
  ],
  "requiresAuth": true,
  "response": {
    "type": "object",
    "properties": {
      "result": "array"
    }
  }
}